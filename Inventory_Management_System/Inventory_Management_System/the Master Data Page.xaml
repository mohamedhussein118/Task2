<Window x:Class="Inventory_Management_System.the_Master_Data_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory_Management_System"
        mc:Ignorable="d"
        Title="the_Master_Data_Page" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Height="30" VerticalAlignment="Top" Background="DarkBlue">
            <TextBlock Foreground="White" Text="Products section" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"> </TextBlock>
        </Border>
        
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Name:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProductName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Description:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProductDescription" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Quantity:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProductQuantity" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Price:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProductPrice" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Supplier :" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSupplier" Width="200"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="20">
      
                <Button x:Name="btnAddProduct" Background="DarkBlue" Foreground="White" Content="Add Product" Width="100" Click="btnAddProduct_Click" Margin="20"/>
            <Button x:Name="btnVEditProducts" Background="Green" Foreground="White"  Content="Edit Products" Width="100" Click="btnEditProducts_Click" Margin="20"/>
            <Button x:Name="btnDeleteProduct" Background="Red" Foreground="White" Content="Delete Product" Width="100" Click="btnDeleteProduct_Click" Margin="20"/>

        </StackPanel>
<!--/////////////////////////////////-->
        <Border Grid.Row="0" Grid.Column="1" Height="30" VerticalAlignment="Top" Background="DarkBlue">
            <TextBlock Foreground="White" Text="Supplier section" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Name:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtsupplierName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Phone:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtsupplierphone" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Email:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtsupplierEmail" Width="200"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20">

            <Button x:Name="Add" Background="DarkBlue" Foreground="White" Content="Add Supplier" Width="100" Click="Add_Click" Margin="20"/>
            <Button x:Name="Edit" Background="Green" Foreground="White"  Content="Edit supplier" Width="100" Click="Edit_Click" Margin="20"/>
            <Button x:Name="Delete" Background="Red" Foreground="White" Content="Delete supplier" Width="100" Click="Delete_click" Margin="20"/>

        </StackPanel>
    </Grid>
</Window>
